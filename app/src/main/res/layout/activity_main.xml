<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.MainActivity"
    android:background="@color/colorAccent"
    >


    <com.google.android.material.button.MaterialButton
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:layout_margin="50dp"
        android:text="دخول الي اللجنة "
        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
        android:textSize="20sp"
        android:id="@+id/lagna_button"
        android:textAllCaps="false"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@id/admin_button"
        app:backgroundTint="#2A454E"
        android:textColor="@color/colorPrimary"

        >

    </com.google.android.material.button.MaterialButton>

    <com.google.android.material.button.MaterialButton
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:layout_margin="50dp"
        android:text="دخول الي الغرفة "
        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
        android:textSize="20sp"
        android:id="@+id/admin_button"
        android:textAllCaps="false"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:backgroundTint="#2A454E"
        android:textColor="@color/colorPrimary"

        />

    <com.google.android.material.button.MaterialButton
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:layout_margin="50dp"
        android:text="دخول الي الاستطلاع "
        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
        android:textSize="20sp"
        android:id="@+id/survey_button"
        android:textAllCaps="false"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/admin_button"
        app:backgroundTint="#2A454E"
        android:textColor="@color/colorPrimary"

        >

    </com.google.android.material.button.MaterialButton>
</androidx.constraintlayout.widget.ConstraintLayout>