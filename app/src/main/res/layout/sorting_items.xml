<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="12dp"
    >

    <TextView
        android:id="@+id/candidate_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1"
        android:textColor="#000"
        android:textSize="18sp"
        android:layout_margin="8dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />


    <TextView
        android:id="@+id/candidate_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="محمد رضا"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toLeftOf="@id/candidate_num"
        android:layout_margin="8dp"
        android:textColor="#000"
        />


    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/edittext_vote"
        android:layout_width="wrap_content"
        android:layout_height="36dp"
        android:minWidth="32dp"
        android:inputType="numberDecimal"
        android:layout_marginRight="24dp"
        android:layout_marginTop="4dp"
        app:layout_constraintRight_toLeftOf="@id/candidate_name"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@drawable/edti_text_back"
        />


    <Button
        android:id="@+id/done"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="32dp"
        android:text="تم"
        android:textColor="#000"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>